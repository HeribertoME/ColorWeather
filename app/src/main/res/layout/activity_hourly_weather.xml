<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hourly_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hmelizarraraz.colorweather.HourlyWeatherActivity"
    android:background="@drawable/bg_gradient_blue"
    >

    <TextView
        style="@style/mainStyle"
        android:id="@+id/tvHourlyTitle"
        android:text="@string/hourly_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        />

    <ListView
        android:id="@+id/hourlyListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvHourlyTitle"
        android:layout_centerHorizontal="true"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/tvHourlyNoData"
        style="@style/mainStyle"
        android:text="@string/no_data_to_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>
